<%- include('../includes/adminHeader.ejs') %>


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">User Table</h1>
                    <p class="mb-4"></p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">User DataTables</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <div style="width: 20%;">
                                    <input type="search" id="myInput" class="form-control form-control-sm" placeholder="search" aria-controls="dataTable">
                                </div>
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    
                                    <thead>
                                        <tr>
                                            <td>ID</td>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Number</th>
                                            <th>Action</th>
                                
                                        </tr>
                                    </thead>
                                    <!-- <tfoot>
                                        <tr>
                                            <td>ID</td>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Number</th>
                                            <th>Action</th>
                                           
                                        </tr>
                                    </tfoot> -->
                                    <tbody>
                                        <% for(var i=0;i<users.length; i++){%>
                                            <tr>
                                                <td><%= i+1 %></td>
                                                <td><%= users[i].name %></td>
                                                <td><%= users[i].email %></td>
                                                <td><%= users[i].number %></td>
                                                <td >
                                                    <!-- <a href="/update-user?id=<%= users[i]._id %>" class="btn border-shadow update">
                                                        <span class="text-gradiant"><i class="fa fa-pencil"></i></span>
                                                    </a>
                                                    <a class="btn border-shadow delete" data-id=<%= users[i]._id%>
                                                        <span class="text-gradiant"><i class="fa fa-times"></i></span>
                                                    </a> --> 
                                                    <% if(users[i].isVerified) { %>
                                                        <a class="btn border-shadow ban" href="/adminLogin/block-user?id=<%= users[i]._id %>">
                                                            <span class="text-gradiant-ban"><i class="fa fa-ban text-success "></i></span>
                                                        </a>
                                                        <% } else { %>
                                                            <a class="btn border-shadow ban" href="/adminLogin/block-user?id=<%= users[i]._id %>">
                                                                <span class="text-gradiant-ban"><i class="fa fa-ban  text-danger "></i></span>
                                                            </a>
                                                            <% } %>
                                                </td>
                                            </tr>
                                            <%}%>   
                                    </tbody>
                                </table>
                                
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            
    <%- include('../includes/adminFooter.ejs') %>

