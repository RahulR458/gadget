<%- include('../includes/adminHeader.ejs') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                
                    <div class="container">
                        <h1 class="mt-5 mb-4">Add a New Offer</h1>
                        <form action="/api/offer" method="post" id="add_offer">
                            <!-- Product Name -->
                            <div class="form-group">
                                <label for="offerPercentage">Offer Name</label>
                                <input type="text" class="form-control" id="offerName" name="offerName" required>
                            </div>

                            <div class="form-group">
                                <label for="offerPercentage">Offer Percentage</label>
                                <input type="number" class="form-control" id="offerPercentage" name="offerPercentage" required>
                            </div>
                
                            <!-- Product Description -->
                            <div class="form-group">
                                <label for="category">Select Category</label>
                                <!-- <input type="text" class="form-control" id="category" name="category" required> -->
                                <select class="form-control" id="category" name="category" >
                                    <option>Select Option</option>
                                    <% category.forEach(cat=>{  %>
                                        <option value="<%= cat._id%>"><%= cat.categoryName%></option>
                                        <% }) %>
                                </select>
                                
                            </div>
                
                            <!-- Product Price -->
                            <div class="form-group">
                                <label for="category">Select Product</label>
                                <!-- <input type="text" class="form-control" id="category" name="category" required> -->
                                <select class="form-control" id="product" name="product" >
                                    <option>Select Option</option>
                                    <% product.forEach(prod=>{  %>
                                        <option value="<%= prod._id%>"><%= prod.productName%></option>
                                        <% }) %>
                                </select>
                                
                            </div>
                
                        
                
                            <!-- Product Image -->
                            <div class="form-group">
                                <label for="couponCount">Count</label>
                                <input type="number" class="form-control" id="couponCount" name="couponCount" required>
                            </div>

                            <!-- Product stock -->
                            <div class="form-group">
                                <label for="couponExpiry">Expiry Date</label>
                                <input type="date" class="form-control" id="couponExpiry" name="couponExpiry" required>
                            </div>
                                            
                            <button type="submit" class="btn btn-primary">Add Offer</button>
                        </form>
                    </div>
                
                </div>
                <!-- /.container-fluid -->

                <%- include('../includes/adminFooter.ejs') %>