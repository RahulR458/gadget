<%- include('../includes/adminHeader.ejs') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                
                    <!-- Page Heading -->
                    <div class="container mt-5">
                        <h1>Add Category</h1>
                        <!-- Category Form -->
                        <form  id="update_category">
                            <div class="form-group">
                                <label for="categoryName">Category Name</label>
                                <input type="hidden" class="form-control" id="categoryId" name="categoryId" value="<%= category._id %>">
                                <input type="text" class="form-control" id="categoryName" name="categoryName" value="<%= category.categoryName %>">
                            </div>
                            <div class="form-group">
                                <label for="categoryDescription">Category Description</label>
                                <input class="form-control" id="categoryDescription" name="categoryDescription" value="<%= category.categoryDescription %>">
                            </div>
                            <div class="form-group">
                                <label for="categoryImage">Category Image</label>
                                <input type="file" class="form-control-file" id="categoryImage" name="categoryImage" accept="image/*">
                            </div>
                            <button type="submit" class="btn btn-primary">Update Category</button>
                        </form>
                    </div>


                </div>
                <!-- /.container-fluid -->


                <%- include('../includes/adminFooter.ejs') %>